public class Solution {
    public int CountNegatives(int[][] grid) {
        int negNum = 0;
        for(int i = grid.Length-1; i>= 0; i--){
            int[] innerGrid = grid[i];
            for(int j = innerGrid.Length-1; j>=0;j--){
                if(innerGrid[j] >=0){
                    break;
                }
                negNum++;
            }
        }
        return negNum;
    }
}
